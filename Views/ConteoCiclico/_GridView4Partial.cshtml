@{
    var grid = Html.DevExpress().GridView(settings => {
        settings.Name = "Grid4View";
        settings.CallbackRouteValues = new { Controller = "ConteoCiclico", Action = "GridView4Partial" };

        settings.SettingsEditing.Mode = GridViewEditingMode.EditFormAndDisplayRow;
        settings.SettingsBehavior.ConfirmDelete = true;



        settings.KeyFieldName = "doc_control_inventario";

        settings.SettingsPager.Visible = true;
        settings.Settings.ShowFilterRow = true;
        settings.SettingsBehavior.AllowSelectByRowClick = true;

        settings.SettingsAdaptivity.AdaptivityMode = GridViewAdaptivityMode.Off;
        settings.SettingsAdaptivity.AdaptiveColumnPosition = GridViewAdaptiveColumnPosition.Right;
        settings.SettingsAdaptivity.AdaptiveDetailColumnCount = 1;
        settings.SettingsAdaptivity.AllowOnlyOneAdaptiveDetailExpanded = false;
        settings.SettingsAdaptivity.HideDataCellsAtWindowInnerWidth = 0;

        settings.Columns.Add("doc_control_inventario");
        settings.Columns.Add("fecha_contado");
        settings.Columns.Add("base");
        settings.Columns.Add("codigo_estilo");
        settings.Columns.Add("descripcion_estilo");
        settings.Columns.Add("Sku_id");
        settings.Columns.Add("Upc");
        settings.Columns.Add("color");
        settings.Columns.Add("talla");
        settings.Columns.Add("division");
        settings.Columns.Add("departamento");
        settings.Columns.Add("subclase");
        settings.Columns.Add("identificador");
        settings.Columns.Add("cantidadupc");
        settings.Columns.Add("teorico_sku");
        settings.Columns.Add("teorico");
        settings.Columns.Add("contado");
        settings.Columns.Add("diferencia");
        settings.Columns.Add("costo");
        settings.Columns.Add("EstiloProveedor");
        settings.Columns.Add("marca");
        settings.Columns.Add("codcolor");
        settings.Columns.Add("color");

    });
    if (ViewData["EditError"] != null){
        grid.SetEditErrorText((string)ViewData["EditError"]);
    }
}
@grid.Bind(Model).GetHtml()