@using DevExtreme.AspNet.Mvc;
@{
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
    ViewBag.Title = "Prueba";
}
<!DOCTYPE html>
<html>
<head>
    <style type="text/css">
        .auto-style2 {
            width: 465px;
        }

        .auto-style3 {
            width: 139px;
        }

        .auto-style9 {
            height: 47px;
            width: 186px;
        }

        .auto-style10 {
            width: 148px;
            height: 47px;
        }

        .auto-style11 {
            width: 101px;
            height: 47px;
        }

        .auto-style12 {
            width: 296px;
            height: 47px;
        }


        .mensaje {
            width: 242px;
            height: 29px;
            text-align: center;
        }

        .auto-style13 {
            width: 1215px;
            height: 29px;
            text-align: center;
        }
    </style>
</head>
<body>
    @Html.DevExpress().GetStyleSheets(
    new StyleSheet { ExtensionSuite = ExtensionSuite.GridView }
    )
    @Html.DevExpress().GetScripts(
            new Script { ExtensionSuite = ExtensionSuite.GridView }
    )
    <div>
        <table class="dx-justification">
            <tr>
                <td class="auto-style10">
                    @Html.Label("Documento de Control")
                </td>
                <td class="auto-style9">
                    @Html.TextBox("txt_DocumentoControl")
                </td>
                <td class="auto-style11"></td>
                <td class="auto-style12"></td>
            </tr>
            <tr>
                <td class="auto-style10"> @Html.Label("Base")</td>
                <td class="auto-style9"> @Html.TextBox("txt_base")</td>
                <td class="auto-style11">
                    <input type="button" value="Buscar" style="visibility:hidden" />
                </td>
                <td class="auto-style12">
                    @Html.TextBox("textBox1")
                    @Html.TextBox("textBox2")
                </td>
            </tr>
        </table>
    </div>
    <div style="width: 1212px">
        <table class="auto-style13">
            <tr>
                <td class="auto-style13">
                    @Html.Label("REPORTE NO SURTIDOS")
                </td>
            </tr>
        </table>
    </div>
    <div style="width: 1212px">
        <table class="auto_style13">
            <tr>
                <td class="auto-style13">
                    @Html.Label("MENSAJE")
                </td>
            </tr>
        </table>
    </div>
    <div style="height: 295px">

        @Html.Action("GridView2Partial", "ConteoCiclico")

    </div>
</body>
</html>