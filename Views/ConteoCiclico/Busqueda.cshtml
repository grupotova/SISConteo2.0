
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Busqueda";
}

<!DOCTYPE html>
<html lang="es" translate="no">
<head>
    <!--<link href="css/cssform.css" rel="stylesheet" />-->
    <style type="text/css">
        .auto-style1 {
            width: 944px;
        }

        .auto-style2 {
            height: 51px;
            width: 212px;
        }

        .auto-style3 {
            height: 42px;
        }

        .auto-style5 {
            height: 41px;
        }

        .auto-style6 {
            height: 45px;
            width: 384px;
        }

        .auto-style7 {
            height: 41px;
            width: 186px;
        }

        .auto-style10 {
            height: 42px;
            width: 186px;
        }

        .auto-style12 {
            height: 42px;
        }

        .auto-style14 {
            height: 47px;
        }

        * {
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;
            box-sizing: border-box;
        }
    </style>
</head>
<body>
    @model WebInventario2._0.Models.FormModels.BuscarModel
    @using (Html.BeginForm("Buscar", "ConteoCiclico", FormMethod.Post))
    {
        <div>
            <table class="auto-style1">
                <tr>
                    <td class="lblencabezado">
                        @Html.Label("Documento de Control")
                    </td>
                    <td class="txtencabezado">
                        @Html.TextBoxFor(s => s.documentoControl)
                    </td>
                    <td class="auto-style14"></td>
                    <td class="auto-style14"></td>
                </tr>
                <tr>
                    <td class="lblencabezado">
                        @Html.Label("Base")
                    </td>
                    <td class="auto-style9">
                        @Html.TextBoxFor(s => s._Base)
                    </td>
                    <td class="auto-style6"></td>
                    <td class="auto-style6"></td>
                </tr>
                <tr>
                    <td class="auto-style7"></td>
                    <td class="auto-style5">
                        <input type="submit" value="Buscar" id="btn_Buscar">
                    <td class="auto-style12">
                        <input type="button" value="Salir" onclick="location.href='@Url.Action("Salir","ConteoCiclico")'">
                    </td>
                    <td class="auto-style5">
                    </td>
                    <td class="auto-style5"></td>
                </tr>
            </table>
            <div style="height: 33px; width: 1023px">
                @*TODO Hacer que el modal aparesca con el mensaje*@
                @if (null != Model)
                {
                    if (!Model.mensaje.Equals(""))
                    {
                        <script>
                            $('#ModalPopUp').modal('show');
                        </script>
                    }
                }

                @Html.DisplayFor(s => s.mensaje)
            </div>
        </div>
    }
    <div class="modal fade" id="ModalPopUp" role="dialog">
        <div class="modal-dialog err-pop" style="">
            <div class="modal-content">
                <div class="modal-header">
                    <button id="DivClose" type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body" style="text-align:center;">
                    Put Your Html Element Here
                </div>
            </div>
        </div>
    </div>
</body>
</html>